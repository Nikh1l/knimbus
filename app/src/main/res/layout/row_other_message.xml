<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_message"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginBottom="12dp">

    <TextView
        android:id="@+id/tv_message_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="nk20997@gmail.com"
        android:textStyle="bold" />


    <android.support.v7.widget.CardView
        android:id="@+id/cv_message_assistant_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="40dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="4dp"
        android:layout_below="@id/tv_message_name"
        app:cardBackgroundColor="@color/colorPrimary"
        app:cardCornerRadius="5dp">

        <TextView
            android:id="@+id/tv_message_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:letterSpacing=".05"
            android:padding="10dp"
            android:text="Hello asdf ds"
            android:textColor="#fff"
            android:textSize="16sp" />
    </android.support.v7.widget.CardView>


    <TextView
        android:id="@+id/tv_message_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/cv_message_assistant_card"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="10:30 AM, 10/07/2018" />

</RelativeLayout>